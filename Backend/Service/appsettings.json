{
    "ConnectionStrings": {
        "Default": "Data Source=.\\;Initial Catalog=fxEmail;User ID=ftsql;Password=__DB_PASSWORD__;TrustServerCertificate=True;"
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5100"
            }
        }
    },
    "ApiSettings": {
        "ApiKey": "__API_KEY__",
        "EnableSwagger": true
    },
    "SMSSettings": {
        "SendFrom": "9544665557",
        "ApiKey": "__SMS_API_KEY__",
        "BaseUrl": "https://pie.funtimepb.com/v2/sms/send"
    },
    "Mail": {
        "BatchSize": 50,
        "IdleDelaySeconds": 10,
        "MaxAttempts": 5
    },
    "Webhook": {
        "Enabled": true,
        "TimeoutSeconds": 10,
        "MaxRetries": 3
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Serilog": {
        "MinimumLevel": { "Default": "Information" },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "F:\\DocVault\\Logs\\FXEW-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "fileSizeLimitBytes": 10485760,
                    "rollOnFileSizeLimit": true,
                    "shared": true
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
}
